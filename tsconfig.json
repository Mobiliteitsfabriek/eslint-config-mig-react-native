{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es2019"],
    "baseUrl": ".",
    "jsx": "react-native",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": [
    // For performance, it's better to add specific folders to TS check
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
